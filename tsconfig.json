{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@todocity/theme": ["libs/todocity/theme/index.ts"],
      "@todocity/firebase": ["libs/todocity/firebase/index.ts"],
      "@todocity/analytics": ["libs/todocity/analytics/index.ts"],
      "@todocity/components": ["libs/todocity/components/index.ts"],
      "@todocity/ui": ["libs/todocity/ui/index.ts"],
      "@todocity/models": ["libs/todocity/models/index.ts"],
      "@todocity/seo": ["libs/shared/seo"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
