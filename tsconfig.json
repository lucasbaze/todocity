{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@todocity/theme": ["libs/todocity/theme/index.ts"],
      "@todocity/firebase": ["libs/todocity/firebase/index.ts"],
      "@todocity/analytics": ["libs/analytics/index.ts"],
      "@todocity/components/*": ["libs/todocity/components/*"],
      "@todocity/ui/core": ["libs/todocity/ui/core/index.ts"],
      "@todocity/ui/components/*": ["libs/todocity/ui/components/*"],
      "@todocity/scenes": ["libs/todocity/scenes/index.ts"],
      "@todocity/seo": ["libs/shared/seo"],
      "@todocity/game": ["libs/todocity/game"],
      "@todocity/store": ["libs/todocity/store"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
